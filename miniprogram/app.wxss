/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
.menu-box{
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 16px 0;
}

.menu-box view{
    margin: 0 16px;
    padding: 8px 30px;
    border-radius: 50px;
    font-size: 12px;
    background: #fff;
    color: #000;
    opacity: 0.7;
}
.ad{
  margin: 50px 16px 0;
  border-radius: 4px;
  overflow: hidden;
}

.shareCanvas{
  position: fixed;
  width: 400px;
  top: -100000px;
  left: 0;
  border-radius: 20px;
}

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}
