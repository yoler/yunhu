.container{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 100%;
}
.swiper{
    height: 100%;
    width: 100%;
}
.swiper-item{
    position: relative;
    height: 100%;
    width: 100%;
    overflow: auto;
}
.swiper-item-image{
    position: absolute;
    width: 100%;
    height: 100%;
}
.swiper-item-image >image{
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    filter: blur(5px);
}
.mask{
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.7);
    z-index: 2;
}
.content{
    position: absolute;
    width: 100%;
    min-height: 100%;
    z-index: 10;
    padding-bottom: 120px;
}
.title{
    display: block;
    font-size: 18px;
    color: #000;
    text-align: center;
    margin-top: 60px;
    line-height: 1.6;
    padding: 0 60px;
    user-select: text;
    /* font-family: 'KaiTi'; */
}
.tag-box{
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.tag-item{
    font-size: 12px;
    padding: 1px 8px;
    border: 1px solid #666;
    border-radius: 30px;
    margin: 0 8px;
}
.author{
    display: block;
    font-size: 12px;
    color: #666;
    text-align: center;
    padding-top: 5px;
    user-select: text;
}
.article{
    font-size: 16px;
    color: #555;
    text-indent: 16px;
    padding: 20px 16px;
    line-height: 1.7;
    user-select: text;
    
}
.tip{
    font-size: 12px;
    color: #999;
    z-index: 100;
    text-align: center;
}