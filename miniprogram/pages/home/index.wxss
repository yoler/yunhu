.container{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 100%;
}
.swiper{
    height: 100%;
    width: 100%;
}
.swiper-item{
    position: relative;
    height: 100%;
    width: 100%;
}
.swiper-item-image{
    position: absolute;
    width: 100%;
    height: 100%;
}
.swiper-item-image >image{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
    filter: blur(5px);
}
.mask{
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.5);
    z-index: 2;
}
.content{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 10;
}
.title{
    display: block;
    font-size: 30px;
    line-height: 1.6;
    color: #000;
    text-align: center;
    padding: 16px;
    margin-top: 30%;
    font-weight: bold;
    font-family: 'KaiTi';
}
.tag-box{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    
}
.tag-item{
    font-size: 12px;
    padding: 1px 8px;
}

.origin{
    text-align: center;
    margin: 20px 0;
}
.author{
    display: block;
    font-size: 14px;
    color: #666;
    padding: 8px 20px;
}
.origin-item{
    font-size: 14px;
    padding: 2px 20px;
    color: #666;
    line-height: 1.6;
}
.tip{
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #999;
    z-index: 100;
}
