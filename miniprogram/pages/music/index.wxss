.container{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 100%;
}
.swiper{
    height: 100%;
    width: 100%;
}
.swiper-item{
    position: relative;
    height: 100%;
    width: 100%;
}
.swiper-item-image{
    position: absolute;
    width: 100%;
    height: 100%;
}
.swiper-item-image >image{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
    filter: blur(6px);
}
.mask{
    position: absolute;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.6);
    z-index: 2;
}
.content{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 10;
}
.title{
    display: block;
    font-size: 26px;
    color: #000;
    text-align: center;
    padding: 16px;
    margin-top: 25%;
    line-height: 1.6;
}
.tag-box{
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.tag-item{
    font-size: 12px;
    padding: 1px 8px;
    border: 1px solid #666;
    border-radius: 30px;
    margin: 0 8px;
}
.author{
    display: block;
    font-size: 14px;
    color: #000;
    text-align: right;
    padding: 20px;
}